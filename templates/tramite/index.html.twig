{% extends 'base.html.twig' %}

{% block title %}Tramites{% endblock %}

{% block body %}
   {{parent()}}

    <div class="btnAgregar">
        <a href="/createtramite" class="btn mt-4" id="agregar"><i class="fas fa-plus"></i>Agregar nuevo tramite</a>
    </div>
    
    {% for tramit in tramite %}
        <p>Fecha de inicio: {{ tramit.fechaInicio|date('d-m-Y') }} </p>
        <p>Descripción: {{ tramit.observacion}}</p>
        <p>Tipo de trámite: {{tramit.tipotramite.nombre}}</p>
    {% endfor %}

{% endblock %}